<UserControl x:Class="REvolution.Editor.FragmentViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}, AncestorLevel=1}, Path=Width}" Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}, AncestorLevel=1}, Path=Height}">
    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Name="Layout" BorderBrush="#9ad1ff" BorderThickness="0,0,0,1">
            <Border.BitmapEffect>
                <DropShadowBitmapEffect Color="Gray" Direction="0" Opacity="0.5" Softness="5" />
            </Border.BitmapEffect>
        </Border>
    </Grid>
    </ScrollViewer>
</UserControl>
